@page
@model officescheduler.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>


<p>
    <a asp-page="../User/Create">Register</a>
</p>

<h1>Please enter your credentials</h1>

<p>Link to create account here</p>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserClass.Email" class="control-label"></label>
                <input asp-for="UserClass.Email" class="form-control" />
                <span asp-validation-for="UserClass.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserClass.Password" class="control-label"></label>
                <input asp-for="UserClass.Password" class="form-control" />
                <span asp-validation-for="UserClass.Password" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>


        </form>
    </div>
</div>