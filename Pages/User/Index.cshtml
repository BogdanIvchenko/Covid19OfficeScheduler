@model officescheduler.Pages.User.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserClass[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserClass[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserClass[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserClass[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserClass[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserClass[0].DefaultOffice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserClass[0].ADuser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserClass[0].IsManager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserClass[0].Option1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserClass[0].Option2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserClass[0].Option3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.UserClass) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultOffice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ADuser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsManager)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Option1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Option2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Option3)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID>Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
